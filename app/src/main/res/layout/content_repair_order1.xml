<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RepairOrder1"
    >


<LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    >

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/spinner_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
        android:textSize="21sp"
        android:textColor="#0d0101"
        android:lineSpacingExtra="6.867sp"
        android:fontFamily="@font/avenirlight"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        app:hintText="Brand"
        app:fontFamily="@font/avenirlight"

        />
    <ProgressBar
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="120dp"
        android:visibility="gone"
        android:id="@+id/progBar"
        />
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/spinner_seriesSearch"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textColor="#0d0101"
        android:lineSpacingExtra="6.867sp"
        android:fontFamily="@font/avenirlight"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        app:hintText="Model"
        app:fontFamily="@font/avenirlight"
        />




</LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:textColor="#FFFFFF"
        android:onClick="OrderRepair"
        android:text="Order Repair"
        android:id="@+id/order_repair_but"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/avenirheavy"
        android:textSize="22.8sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        />
    </RelativeLayout>


