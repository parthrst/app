<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_gradient"
    tools:context=".RepairOrder1"
    >


    <ImageView
        android:id="@+id/circleLeft"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/ic_concentric_circles"
        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@drawable/ic_concentric_circles"
        android:id="@+id/circleRight"
        />

    <ImageView

        android:id="@+id/plantLeft"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="74dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_plant"

        />


    <ImageView
        android:id="@+id/plantRight"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/circleRight"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_plant" />





<LinearLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true">

 <android.support.v7.widget.RecyclerView

     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:id="@+id/recyleview"
     android:scrollbars="vertical"

     />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_design"
        android:textColor="#FFFFFF"
        android:onClick="OrderRepair"
        android:text="Order Repair"

        />



</LinearLayout>

    </RelativeLayout>


